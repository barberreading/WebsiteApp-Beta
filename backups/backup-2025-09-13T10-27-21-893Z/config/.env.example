# PORT CONFIGURATION - DO NOT CHANGE
# Backend must run on port 3002
# Frontend runs on port 3001
# This ensures proper separation and avoids conflicts
PORT=3002

# Admin Credentials for Scripts
# Set these for secure script execution (required for maintenance scripts)
ADMIN_EMAIL=andrew@everythingchildcareagency.co.uk
ADMIN_PASSWORD=your_secure_admin_password_here

# MongoDB Connection
# Use one of the following connection methods:
# Local MongoDB (if installed locally)
# MONGO_URI=mongodb://localhost:27017/staff-management

# MongoDB Atlas (cloud database)
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority&appName=<appname>

# Custom MongoDB server
# MONGO_URI=mongodb://<host>:<port>/<database>

# JWT Configuration
# Generate a strong, unique secret key for JWT tokens
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@yourdomain.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_ENABLED=true

# Environment
NODE_ENV=development

# Security Note:
# Never commit the actual .env file to version control
# Always use strong, unique passwords and secrets
# Rotate credentials regularly